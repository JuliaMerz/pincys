{
  "manifest_version":2,

  "name": "Pincy's",
  "description": "Allows you to find Macy's listings similar to posts on Pinterest",
  "version":"0.1",
  
  "content_scripts": [
    {
      "matches": [
        "*://*.pinterest.com/*clothing*",
        "*://*.pinterest.com/*appliances*",
        "*://*.pinterest.com/*shoes*",
        "*://*.pinterest.com/*jewelry*",
        "*://*.pinterest.com/*kitchen*"
          ],
      "css": ["pincys.css"],
      "js": ["jquery-2.1.0.min.js", "pincys.js"]
    }
  ],
  "permissions": [
    "http://www.pincy.co/"
  ],
  "browser_action":{
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Google Mail",
    "default_popup": "pincys.html"
  },
  "web_accessible_resources": [
    "images/*.png",
    "pincys.css"
    ]

}
